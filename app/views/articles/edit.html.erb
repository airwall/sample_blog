
<%= form_for :article, url: article_path(@article), method: :put do |f| %>
<div class="container-fluid">
<h3>Edit article</h3>
<% if @article && @article.errors.any? %>
<p>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>			
			<li><%= msg %></li>	
		<% end %>
	</ul>
	</p>
	<p>	
	<%end%>
		<%= f.label :title %> <br />
		<%= f.text_field :title %>
	</p>

	<p>	
		<%= f.label :text %> <br />
		<%= f.text_area :text %>
	</p>

	<p>	
		<%= f.submit %>
	</p>
	</div>
<% end %>