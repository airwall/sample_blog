<% @articles.each do |art| %>
	<div class="container-fluid">
	<h2><%=art.title%></h2>
	<p><%=art.text%></p>
	<br />
	<%= link_to "Show", article_path(art) %> |
	<%= link_to "Edit", edit_article_path(art) %> |
	<%= link_to "Delete", article_path(art), data: { confirm: 'Are you certain you want to delete this?' }, :method => :delete %>
	
	</div>
	<hr/>
<% end %>


