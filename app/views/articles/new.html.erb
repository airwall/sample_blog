<div class="container">

<%= form_for :article, url: articles_path, :html => {:class => 'form-group'} do |f| %>

<% if @article && @article.errors.any? %>
<p>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>			
			<li><%= msg %></li>	
		<% end %>
	</ul>
	</p>
	<p>	
	<%end%>
		<%= f.label :title %> <br />
		<%= f.text_field :title, :placeholder=>"Write your name", :title=>"Write your name" %>
	</p>

	<p>	
		<%= f.label :text %> <br />
		<%= f.text_area :text, :class => "form-control", :cols => 10, :rows => 10, :placeholder=>"Write a comment...", :title=>"Write a comment..."  %>
	</p>

	<p>	
		<%= f.submit %>
	</p>
	
<% end %>
</div>


