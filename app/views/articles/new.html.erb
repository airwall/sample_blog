<div class="container">
<% if @article && @article.errors.any? %>
	<ul>
		<div class="alert ">
		<% @article.errors.full_messages.each do |msg| %>			
			<li><%= msg %></li>
		<% end %>
		</div>
	</ul>
	<%end%>
<div class="row">
<%= form_for :article, url: articles_path, :html => {:class => 'form-inline'} do |f| %>
<div class="form-group">
	<%= f.label :title %> <br />
	<%= f.text_field :title, :placeholder=>"Write your name", :title=>"Write your name", :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :text %> <br />
	<%= f.text_area :text, :class => "form-control", :rows => 3, :placeholder=>"Write a comment...", :title=>"Write a comment..."  %>
</div>
	
<%= f.submit 'Send', :class => "btn btn-default" %>
<% end %>
</div>
</div>




