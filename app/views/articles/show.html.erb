<div class="container-fluid">
<h1><%= @article.title %></h1>

<p> <%= @article.text%></p>

</div>
<hr/>
<% @article.comments.each do |comment| %>
	<div class="container-fluid">
	<h2><%=comment.author%></h2>
	<p><%=comment.body%></p>
	</div>
<% end %>

<hr/>
<%= form_for ([@article, @article.comments.build])  do |f| %>
<div class="container-fluid">
		<%= f.label :author %> <br />
		<%= f.text_field :author %>
	</p>

	<p>	
		<%= f.label :body %> <br />
		<%= f.text_area :body %>
	</p>

	<p>	
		<%= f.submit %>
	</p>
	</div>
<% end %>
<hr/>