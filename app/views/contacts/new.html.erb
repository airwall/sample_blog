

<div class="row">
<%= form_for :contact, url: contacts_path, :html => {:class => 'form-group'} do |f| %>

<h2>Contacts</h2>
	<% if @contact && @contact.errors.any? %>
	<p>
	<ul>
		<% @contact.errors.full_messages.each do |msg| %>			
			<li><%= msg %></li>	
		<% end %>
	</ul>
	</p>
<% end %>

	<p>	
		<%= f.label :email %> <br />
		<%= f.text_field :email %>
	</p>

	<p>	
		<%= f.label :message %> <br />
		<%= f.text_area :message, :class => "form-control", :rows => "3", :placeholder=>"Write a comment...", :title=>"Write a comment..." %>
	</p>

	<p>	
		<%= f.submit 'Send Message', :class => "btn btn-default" %>
	</p>
	
<% end %>
</div>